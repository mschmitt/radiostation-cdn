    <yp-url-timeout>15</yp-url-timeout>
    <yp-url>http://dir.xiph.org/cgi-bin/yp-cgi</yp-url>
  </directory>
  <master-server>localhost</master-server>
  <master-server-port>9443</master-server-port>
